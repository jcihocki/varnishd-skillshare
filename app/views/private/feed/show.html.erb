<div id="feed-body" class="container">
  <div class="row">
    <div class="span8">
      <div class="corgi_feed_well">
        <% @items.each_with_index do |item, i| %>
            <div class="feed_stacked <%= 'last_feed_item' if i == @items.size - 1 %>">
              <div class="feed_item">
                <div class="feed_body">
                  <div class="row">
                    <div class="feed_profile_pic">
                      <%= image_tag @item['profile_pic'], :class => "meta_image" %>
                    </div>
                    <div class="feed_text">
                      <p><%= @item['text'] %></p>
                    </div>
                  </div>
                </div>
                <div class="comment_area">
                  <p>Add a comment</p>
                  <form>
                    <textarea rows="3" class="span6"></textarea><br/>
                    <input type="submit" class="btn" />
                  </form>
                </div>
                <hr class="feed_hr">
                <div class="bottom_meta">
                  <div class="row">
                    <div class="bottom_left">
                      <div class="share_wrapper">
                        <div class="share"><a href="#" class="share_button"><i class="icon-heart"></i></a></div>
                        <div class="share_hidden">
                          <ul class="hover_heart">
                            <span class="internal_heart"><i class="icon-heart"></i> Share This Post</span>
                            <div class="social_links">
                              <li><span><i class="icon-twitter"></i> Twitter</span></li>
                              <li><span><i class="icon-facebook"></i> Facebook</span></li>
                              <li><span><i class="icon-pinterest"></i> Pinterest</span></li>
                            </div>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="bottom_right">
                      <a href="#"><%=  @item['feed'] %></a> <span>|</span> <a href="#" class="show_comment_link">comment</a> <span>|</span>
                      <%=  distance_of_time_in_words Time.at( @item['created_at'] ) %> ago
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div> <!-- end span8 -->
    <div class="span4">
      <div class="corgi_feed_well">
        <div class="sidebar_header">
          <div class="sidebar_title">
            <h4>Explanatory Sidebar</h4>
          </div>
        </div>
        <hr class="feed_hr" />
        <div class="sidebar_interior">
          <i class="icon-ok"></i> Note different render times on feed items
          <br/><br/>
          <i class="icon-ok"></i> This page isn't cached.
          <br/><br/>
          <i class="icon-hand-right"></i> Rendered at <%=  Time.now.utc.strftime( "%H:%M:%S" ) %> UTC
          <br/><br/>
        </div>
      </div>
    </div>
  </div>

</div>
